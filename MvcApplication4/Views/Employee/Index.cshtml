@using MvcApplication4.ViewModels
@model EmployeeListView
           
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

 @section TitleSection{
    MyView
 }

@section ContentBody{       
    <div>
      @{
          Html.RenderAction("GetAddNewLink");
          }

        <table border="1" width="314px">
            <tr>
                 <th>Employee Name</th>
                 <th>Salary</th>
            </tr>
                  @foreach (EmployeeModel2 item in Model.Employees)
                 {
                     <tr>
                         <td>@item.EmpName</td>
                         <td style="background-color:@item.SalaryColor">@item.Salary</td>
                      </tr>
              }
        </table>
    </div>
}



